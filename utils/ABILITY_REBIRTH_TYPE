#define ABILITY_REBIRTH_TYPE
    [dummy]
        id=rebirth
        name= _ "rebirth"
        description= _ "fish"
    [/dummy]
    [/abilities]
    [event]
        name=last breath
        first_time_only=no
        [filter]
            ability=rebirth
        [/filter]
        [unstore_unit]
            variable=unit
            find_vacant=no
        [/unstore_unit]
#       {UPDATE_STATS}
        {ADVANCE_UNIT x,y=$x1,$y1 "Lich"}
        [modify_unit]
            [filter]
                x,y=$x1,$y1
            [/filter]
            experience=$unit.experience
            hitpoints={HP}
        [/modify_unit]
    [/event]
    [+abilities]
#enddef